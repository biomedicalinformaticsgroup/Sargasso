#!/usr/bin/env bash

set -o nounset
set -o errexit
set -o xtrace

. common_functions

function listFiles {
    FILES=$@
    
    DELIMITER=","
    OUTPUT=$(ls -1 $FILES | tr '\n' "${DELIMITER}")
    echo ${OUTPUT%$DELIMITER}   
}

function star_se_reads {
    SAMPLE=$1
    SPECIES=$2
    INDEX_DIR=$3
    THREADS_PRE_SAMPLE=$4
    READ_FILES=$5
    OUTPUT_DIR=$6
    STAR_EXECUTABLE=$7

    ID=${SAMPLE}.${SPECIES}
    STAR_TMP=${OUTPUT_DIR}/${ID}.tmp
    mkdir $STAR_TMP

    ${STAR_EXECUTABLE} --runThreadN ${THREADS_PRE_SAMPLE} --genomeDir ${INDEX_DIR} --readFilesIn ${READ_FILES} --outFileNamePrefix ${STAR_TMP}/star --outSAMstrandField intronMotif --outSAMtype BAM Unsorted --readFilesCommand zcat --outFilterMultimapScoreRange 0 --outFilterMultimapNmax 10000

    mv $STAR_TMP/starAligned.out.bam ${OUTPUT_DIR}/${ID}.bam
    mv $STAR_TMP/starLog.final.out ${OUTPUT_DIR}/${ID}.log.out

    rm -rf $STAR_TMP
}

function star_pe_reads {
    SAMPLE=$1
    SPECIES=$2
    INDEX_DIR=$3
    THREADS_PRE_SAMPLE=$4
    READ_1_FILES=$5
    READ_2_FILES=$6
    OUTPUT_DIR=$7
    STAR_EXECUTABLE=$8

    ID=${SAMPLE}.${SPECIES}
    STAR_TMP=${OUTPUT_DIR}/${ID}.tmp
    mkdir $STAR_TMP

    ${STAR_EXECUTABLE} --runThreadN ${THREADS_PRE_SAMPLE} --genomeDir ${INDEX_DIR} --readFilesIn ${READ_1_FILES} ${READ_2_FILES} --outFileNamePrefix ${STAR_TMP}/star --outSAMstrandField intronMotif --outSAMtype BAM Unsorted --readFilesCommand zcat --outFilterMultimapScoreRange 0 --outFilterMultimapNmax 10000

    mv $STAR_TMP/starAligned.out.bam ${OUTPUT_DIR}/${ID}.bam
    mv $STAR_TMP/starLog.final.out ${OUTPUT_DIR}/${ID}.log.out

    rm -rf $STAR_TMP
}



SPECIES=$1
SAMPLES=$2
STAR_INDICES_DIR=$3
THREADS_PRE_SAMPLE=$4
INPUT_DIR=$5
OUTPUT_DIR=$6
READS_TYPE=$7
STAR_EXECUTABLE=$8
TOTAL_THREADS=$9




THREAD_USING=0
MEM_USING=0

for species in ${SPECIES}; do
    for sample in ${SAMPLES}; do
        checkBusy
        sample_dir=${INPUT_DIR}/${sample}
        sample_reads_1_dir=${sample_dir}/reads_1
        sample_reads_2_dir=${sample_dir}/reads_2

        if [[ "${READS_TYPE}" == "single" ]]; then
            star_se_reads ${sample} ${species} ${STAR_INDICES_DIR}/${species} ${THREADS_PRE_SAMPLE} $(listFiles ${sample_reads_1_dir}/*) ${OUTPUT_DIR} ${STAR_EXECUTABLE} &
        else
            star_pe_reads ${sample} ${species} ${STAR_INDICES_DIR}/${species} ${THREADS_PRE_SAMPLE} $(listFiles ${sample_reads_1_dir}/*) $(listFiles ${sample_reads_2_dir}/*) ${OUTPUT_DIR} ${STAR_EXECUTABLE} &
        fi
#        echo "running for ${sample}..." && sleep 2s &
        THREAD_USING=$((${THREAD_USING}+${THREADS_PRE_SAMPLE}))
        MEM_USING=$((${MEM_USING}+30))

    done
done
echo "server busy, ${THREAD_USING} cores/ ${MEM_USING} memory using... waiting for jobs: $(jobs -p) "
wait $(jobs -p)


